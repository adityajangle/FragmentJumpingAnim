<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <FrameLayout
            android:layout_width="0dp"
            android:layout_height="302dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:id="@+id/frameLayout">

        <fragment
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:name="com.example.fragmentjumpingonclick.FragRotate"
                android:id="@+id/fragment2" tools:layout="@layout/fragment_frag_rotate"/>
    </FrameLayout>
    <fragment
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:name="com.example.fragmentjumpingonclick.FixFrag"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/fragment"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout="@layout/fragment_fix"/>
</android.support.constraint.ConstraintLayout>